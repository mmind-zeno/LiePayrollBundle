{% extends "@LiePayroll/payroll/_layout.html.twig" %}

{% block page_content %}
<div class="container-xl">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title">Payroll-Details</h3>
            <div class="btn-toolbar">
                <a href="{{ path('lie_payroll_edit', {id: period.user.id, month: period.month}) }}" class="btn btn-sm btn-primary me-2">
                    <i class="ti ti-edit"></i> Bearbeiten
                </a>
                <a href="{{ path('lie_payroll_payslip', {id: period.user.id, month: period.month}) }}" class="btn btn-sm btn-success" target="_blank">
                    <i class="ti ti-file"></i> Lohnblatt
                </a>
            </div>
        </div>
        <div class="card-body">
            {% set p = period %}
            <dl class="row">
                <dt class="col-sm-3">Mitarbeiter</dt>
                <dd class="col-sm-9">{{ p.user.displayName }}</dd>
                
                <dt class="col-sm-3">Monat</dt>
                <dd class="col-sm-9">{{ p.month }}</dd>
                
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-{{ p.status == 'draft' ? 'secondary' : (p.status == 'approved' ? 'primary' : 'success') }}">
                        {{ p.status }}
                    </span>
                </dd>
                
                <dt class="col-sm-3">Stunden</dt>
                <dd class="col-sm-9">{{ p.totalHours }} h</dd>
                
                <dt class="col-sm-3">Stundenlohn</dt>
                <dd class="col-sm-9">{{ p.hourlyRate }} CHF</dd>
                
                <dt class="col-sm-3">Bruttolohn</dt>
                <dd class="col-sm-9"><strong>{{ p.grossSalary }} CHF</strong></dd>
                
                <dt class="col-sm-3">Abzüge</dt>
                <dd class="col-sm-9">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Satz</th>
                                <th class="text-end">Betrag</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for d in p.deductions %}
                            <tr>
                                <td>{{ d.code }}</td>
                                <td>{{ d.rate }}%</td>
                                <td class="text-end">{{ d.amount }} CHF</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </dd>
                
                <dt class="col-sm-3">Nettolohn</dt>
                <dd class="col-sm-9"><strong class="text-success fs-4">{{ p.netSalary }} CHF</strong></dd>
            </dl>
        </div>
        
        <div class="card-footer">
            {% if p.status == 'draft' %}
            <form method="post" action="{{ path('lie_payroll_approve', {id: p.user.id, month: p.month}) }}" style="display: inline;">
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-check"></i> Freigeben
                </button>
            </form>
            {% elseif p.status == 'approved' %}
            <form method="post" action="{{ path('lie_payroll_mark_paid', {id: p.user.id, month: p.month}) }}" style="display: inline;">
                <button type="submit" class="btn btn-success">
                    <i class="ti ti-coin"></i> Als bezahlt markieren
                </button>
            </form>
            {% elseif p.status == 'paid' %}
            <span class="badge bg-success fs-5">
                <i class="ti ti-check"></i> Bezahlt
            </span>
            {% endif %}
            
            <a href="{{ path('lie_payroll_index', {month: p.month}) }}" class="btn btn-secondary float-end">Zurück</a>
        </div>
    </div>
</div>
{% endblock %}