{% extends "@LiePayroll/payroll/_layout.html.twig" %}

{% block page_content %}
<div class="container-xl">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Payroll bearbeiten</h3>
        </div>
        <form method="post">
            <div class="card-body">
                <dl class="row mb-3">
                    <dt class="col-sm-3">Mitarbeiter</dt>
                    <dd class="col-sm-9">{{ user.displayName }}</dd>
                    <dt class="col-sm-3">Monat</dt>
                    <dd class="col-sm-9">{{ month }}</dd>
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-{{ period.status == 'draft' ? 'secondary' : (period.status == 'approved' ? 'primary' : 'success') }}">
                            {{ period.status }}
                        </span>
                    </dd>
                </dl>

                <hr>

                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Stunden</label>
                    <div class="col-sm-9">
                        <input type="number" step="0.01" name="hours" class="form-control" value="{{ period.totalHours }}" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Stundenlohn (CHF)</label>
                    <div class="col-sm-9">
                        <input type="number" step="0.01" name="rate" class="form-control" value="{{ period.hourlyRate }}" required>
                    </div>
                </div>

                <div class="alert alert-info">
                    <strong>Hinweis:</strong> Nach dem Speichern werden Brutto, Abz√ºge und Netto automatisch neu berechnet.
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Speichern</button>
                <a href="{{ path('lie_payroll_show', {id: user.id, month: month}) }}" class="btn btn-secondary">Abbrechen</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}