{% extends "@LiePayroll/payroll/_layout.html.twig" %}

{% block page_content %}
<div class="container-xl">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Payroll Einstellungen</h3>
        </div>
        <form method="post" action="{{ path('payroll_settings_save') }}">
            <div class="card-body">
                <h4>Globale Einstellungen</h4>
                
                <div class="row mb-3">
                    <label class="col-3 col-form-label">Standard Stundenlohn (CHF)</label>
                    <div class="col">
                        <input type="number" step="0.01" name="default_hourly_rate" class="form-control" value="{{ global.default_hourly_rate }}" required>
                    </div>
                </div>

                <h5 class="mt-4">Abzugssätze (%)</h5>
                
                <div class="row mb-2">
                    <label class="col-3 col-form-label">AHV/IV/EO</label>
                    <div class="col">
                        <input type="number" step="0.01" name="ahv_rate" class="form-control" value="{{ global.ahv_rate }}" required>
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-3 col-form-label">ALV (Arbeitslosenversicherung)</label>
                    <div class="col">
                        <input type="number" step="0.01" name="alv_rate" class="form-control" value="{{ global.alv_rate }}" required>
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-3 col-form-label">NBU (Nichtberufsunfall)</label>
                    <div class="col">
                        <input type="number" step="0.01" name="nbu_rate" class="form-control" value="{{ global.nbu_rate }}" required>
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-3 col-form-label">BVG (Pensionskasse)</label>
                    <div class="col">
                        <input type="number" step="0.01" name="bvg_rate" class="form-control" value="{{ global.bvg_rate }}" required>
                    </div>
                </div>

                <h4 class="mt-5">Mitarbeiter-spezifische Stundensätze</h4>
                <p class="text-muted">Leer lassen = Standard-Stundenlohn wird verwendet</p>

                {% for user in users %}
                <div class="row mb-2">
                    <label class="col-3 col-form-label">{{ user.displayName }}</label>
                    <div class="col">
                        <input type="number" step="0.01" name="user_rate[{{ user.id }}]" class="form-control" value="{{ userRates[user.id] ?? '' }}" placeholder="{{ global.default_hourly_rate }}">
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Speichern</button>
                <a href="{{ path('lie_payroll_index') }}" class="btn btn-secondary">Zurück</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}