{% extends 'base.html.twig' %}

{% block page_title %}Mitarbeiterstammdaten{% endblock %}

{% block main %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-users"></i> Mitarbeiter</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>E-Mail</th>
                    <th>Status</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.displayName }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if user.enabled %}
                            <span class="badge badge-success">Aktiv</span>
                        {% else %}
                            <span class="badge badge-secondary">Inaktiv</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('payroll_users_profile', {id: user.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i> Stammdaten
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}