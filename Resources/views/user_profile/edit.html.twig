{% extends 'base.html.twig' %}

{% block page_title %}Mitarbeiterstammdaten: {{ user.displayName }}{% endblock %}

{% block main %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-user"></i> {{ user.displayName }}</h3>
        <div class="card-tools">
            <a href="{{ path('payroll_users_index') }}" class="btn btn-sm btn-secondary">
                <i class="fas fa-arrow-left"></i> Zurück
            </a>
        </div>
    </div>
    
    {{ form_start(form) }}
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h4>Persönliche Daten</h4>
                {{ form_row(form.address) }}
                {{ form_row(form.postalCode) }}
                {{ form_row(form.city) }}
                {{ form_row(form.birthdate) }}
                {{ form_row(form.ahvNumber) }}
                {{ form_row(form.maritalStatus) }}
                {{ form_row(form.numberOfChildren) }}
                {{ form_row(form.municipality) }}
                {{ form_row(form.taxMunicipality) }}
            </div>
            
            <div class="col-md-6">
                <h4>Beschäftigungsdaten</h4>
                {{ form_row(form.hireDate) }}
                {{ form_row(form.terminationDate) }}
                {{ form_row(form.position) }}
                {{ form_row(form.department) }}
                {{ form_row(form.employmentLevel) }}
                
                <h4 class="mt-4">Zahlungsinformationen</h4>
                {{ form_row(form.iban) }}
            </div>
        </div>
    </div>
    
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Speichern
        </button>
        <a href="{{ path('payroll_users_index') }}" class="btn btn-secondary">Abbrechen</a>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}